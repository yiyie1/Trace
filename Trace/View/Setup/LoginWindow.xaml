<Window x:Class="Trace.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="用户登陆" Height="380" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Image Source="/Resource/Image/LoginBackGround.png" Stretch="Fill"/>

        <Button x:Name="LoginBtn" Content="登陆" HorizontalAlignment="Left" Margin="220,243,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="LoginBtn_Click"/>
        <Button x:Name="ExitBtn" Content="退出" HorizontalAlignment="Left" Margin="331,243,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="ExitBtn_Click"/>
        <Label x:Name="UserLabel" Content="用户名：" HorizontalAlignment="Left" Margin="199,158,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PwdLabel" Content="密码：" HorizontalAlignment="Left" Margin="199,189,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserTextBox" Text="admin"  HorizontalAlignment="Left" Height="23" Margin="312,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PwdTextBox" Password="admin" HorizontalAlignment="Left" Height="23" Margin="312,193,0,0" PasswordChar="*" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
